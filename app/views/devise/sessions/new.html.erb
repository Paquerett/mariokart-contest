<%# CONNEXION PAGE %>

<div class="home-page forms-page">
  <h2>CONNEXION</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  placeholder: 'email',
                  required: false,
                  :label => false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  placeholder: 'Mot de passe',
                  :label => false,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%# <%= f.input :remember_me,label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <div id="submit-form-btn"><%= f.button :submit, "CONNEXION" %></div>
    </div>
  <% end %>

  <p>Ou <%= render "devise/shared/links" %></p>
</div>
