<%# INSCRIPTION PAGE %>

<div class="home-page forms-page">
  <h2>INSCRIPTION</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  placeholder: 'email',
                  :label => false,
                  required: true,
                  autofocus: true,
                  type: "text",
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  placeholder: 'Mot de passe',
                  :label => false,
                  required: true,
                  hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  placeholder: 'Confirmer le mot de passe',
                  :label => false,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <div id="submit-form-btn"><%= f.button :submit, "S'INSCRIRE" %></div>
    </div>
  <% end %>

  <p>Ou <%= render "devise/shared/links" %></p>
</div>
