<%# CHICKEN SHOW CSS %>

<div class="home-page menu-page">
  <% if @players.last.points == nil %>
    <% @players.each do |player| %>
      <%= simple_form_for [@chicken, player] do |f| %>
        <%= player.nickname%>
        <%= f.input :points,
                    placeholder: "Points du joueur",
                    :label => false,
                    autocomplete: "false" %>
        <%= f.button :submit,"Valider"%>
       <% end %>
    <% end %>
  <% elsif @players.last.pointsdemi == nil %>
    <% @players.each do |player| %>
      <%= simple_form_for [@chicken, player] do |f| %>
        <%= player.nickname%>
        <%= f.input :pointsdemi,
                    placeholder: 'Points du joueur',
                    :label => false,
                    autocomplete: "false" %>
        <%= f.button :submit,"Valider"%>
       <% end %>
    <% end %>
  <% elsif @players.last.pointsfinal == nil %>
    <% @players.each do |player| %>
      <%= simple_form_for [@chicken, player] do |f| %>
        <%= player.nickname%>
        <%= f.input :pointsfinal,
                    placeholder: 'Points du joueur',
                    :label => false,
                    autocomplete: "false" %>
        <%= f.button :submit,"Valider"%>
       <% end %>
    <% end %>
  <% end %>
</div>
